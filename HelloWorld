local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local watchedPlayers = {"ItsYoDawgWsgGng", "Laylay_4kla"}

local function sendNotification(title, text, iconId, duration)
    StarterGui:SetCore("SendNotification", {
        Title = title,
        Text = text,
        Icon = iconId or "rbxassetid://1",
        Duration = duration or 10
    })
end

local function isWatchedPlayer(playerName)
    for _, name in ipairs(watchedPlayers) do
        if playerName == name then
            return true
        end
    end
    return false
end

for _, player in pairs(Players:GetPlayers()) do
    if isWatchedPlayer(player.Name) then
        sendNotification("Alert!", "Owner of script is in this server.", "rbxassetid://1", 10)
        sendNotification("UserName:", tostring(player.Name), "rbxassetid://1", 10)
    end
end

Players.PlayerAdded:Connect(function(player)
    if isWatchedPlayer(player.Name) then
        sendNotification("Alert!", "Owner of script has joined the game!", "rbxassetid://1", 10)
        sendNotification("UserName:", tostring(player.Name), "rbxassetid://1", 10)
    end
end)
